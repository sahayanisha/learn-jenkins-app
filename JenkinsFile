pipeline {
    agent any

    stages {
        stage('Build') {
            agent{
                docker{
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                echo "Listing files..."
                ls -la
                echo "Node version:"
                node --version
                echo "NPM version:"
                npm --version
                echo "Installing dependencies..."
                npm ci
                echo "Building project..."
                npm run build
                echo "Build output:"
                ls -la
                '''
            }
        }
        stage('Test'){
            agent{
                docker{
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps{
                sh'''
                echo "Test stage"
                test -f build/index.html
                npm test
                '''
            }
        }
    }
    post{
        always{
            junit 'test-results/junit.xml'
        }
    }
}
